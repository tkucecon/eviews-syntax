{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "EViews",
	"patterns": [
		{ "include": "#keywords" },
		{ "include": "#functions" },
		{ "include": "#operators" },
		{ "include": "#strings" },
		{ "include": "#subroutines" },
		{ "include": "#objects" },
		{ "include": "#variables" }
	],
	"repository": {
		"keywords": {
			"patterns": [
				{ "name": "keyword.control.eviews", "match": "\\b(if|while|for|return)\\b" }
			]
		},
		"functions": {
			"patterns": [
				{ "name": "support.function.eviews", "match": "\\b(@abs|@sqrt|@log|@exp|@sin|@cos|@tan|@round|@sum|@mean|@var|@stdev|@pmax|@pmin|@fv|@pv|@nper|@rate|@pmt|@cumsum|@cumprod|@qnorm|@qbeta|@weekday|@trend|@elem|@first|@ifirst|@last|@ilast|@obsrange|@obssmpl|@pmax|@pmin|@pow|@powm1|@pow1pm1|@recode|@sign|@rmse|@skew|@stdevp|@sum|@sumsq|@theil|@varp|@vars|@cmean|@cmin|@cmax|@rmax|@rmin|@rmean|@rnas|@rnorm|@round|@quarter|@ranks|@rmaxi|@rmini)\\b" }
			]
		},
		"operators": {
			"patterns": [
				{ "name": "keyword.operator.eviews", "match": "[+\-*/^=<>]=?|and|or" }
			]
		},
		"strings": {
			"name": "string.quoted.double.eviews",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{ "name": "constant.character.escape.eviews", "match": "\\\\." }
			]
		},
		"subroutines": {
			"patterns": [
				{ "name": "entity.name.function.eviews", "match": "\\bsubroutine\\s+([a-zA-Z_][a-zA-Z0-9_]*)", "captures": { "1": { "name": "entity.name.function.eviews" } } }
			]
		},
		"objects": {
			"patterns": [
				{ "name": "storage.type.eviews", "match": "\\b(series|coef|scalar|matrix|vector|logl|equation|model|graph|table|spool|group|text)\\b" }
			]
		},
		"variables": {
			"patterns": [
				{ "name": "variable.numeric.eviews", "match": "!\\w+" },
				{ "name": "variable.string.eviews", "match": "%\\w+" }
			]
		}
	},
	"scopeName": "source.eviews"
}
